#include <iostream>
#include <math.h>

using namespace std;

float f(float x)
{
	return (exp(x)-cos(x)-1);
}

int main()
{
	float a=0,b=1,l,c,x=0;
	l=b-a;
	while (l>0.001)
	{
		if (f(a)*f(b)<0)
		{
			l=l/2;
			c=b-l;
			x=c;
			if (f(c)*f(b)<0)
			{
				a=c;
			}
			else if (f(a)*f(c)<0)
			{
				b=c;
			}
			else
			{
				break;
			}
		}
		else
		{
			x=(a+b)/2;
			break;
		}
	}
	x=(float((int(x*100000))/10))/10000;
	cout<<"f(x)=0 in x="<<x<<endl;
	system("pause");
}
